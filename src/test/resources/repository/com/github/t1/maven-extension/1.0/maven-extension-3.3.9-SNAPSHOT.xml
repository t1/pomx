<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/5.0.0">
    <pom>com.github.t1:maven-extension:${maven.version}-SNAPSHOT</pom>
    <name>Maven-Extension</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.version>3.3.9</maven.version>
    </properties>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin id="org.codehaus.plexus:plexus-component-metadata:1.7.1">
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-metadata</goal>
                            <goal>generate-test-metadata</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-shade-plugin:2.3">
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-javadoc-plugin:2.9.1"/>
        </plugins>
    </build>

    <dependencies>
        <provided>
            <jar>org.apache.maven:maven-model:${maven.version}</jar>
            <jar>org.apache.maven:maven-model-builder:${maven.version}</jar>
            <jar>org.eclipse.sisu:org.eclipse.sisu.plexus:0.3.3</jar>
        </provided>
    </dependencies>
</project>
